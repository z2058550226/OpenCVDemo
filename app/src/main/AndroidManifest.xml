<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bybutter.opencvdemo">
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.bybutter.opencvdemo.App"
        android:theme="@style/AppTheme">
        <activity android:name="com.bybutter.opencvdemo.activity.PermissionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bybutter.opencvdemo.activity.TutorialActivity" android:screenOrientation="landscape"/>
        <activity android:name="com.bybutter.opencvdemo.activity.MainActivity" />
        <activity android:name="com.bybutter.opencvdemo.ch1.Ch1Activity" />
        <activity android:name="com.bybutter.opencvdemo.grabcut.GrabCutDemoActivity" />
        <activity android:name=".grabcut.GrabCutActivity" />
    </application>

</manifest>